<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/mainPadding">

    <Button
        android:id="@+id/bulkAddBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button"
        android:textSize="@dimen/mainBtnTextSize"
        android:layout_margin="@dimen/btnMargin"
        android:text="Bulk Add"
        app:layout_constraintBottom_toTopOf="@+id/bulkRemoveBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bulkRemoveBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button"
        android:textSize="@dimen/mainBtnTextSize"
        android:layout_margin="@dimen/btnMargin"
        android:text="Bulk Remove"
        app:layout_constraintBottom_toTopOf="@+id/exportDataBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bulkAddBtn" />

    <Button
        android:id="@+id/exportDataBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button"
        android:textSize="@dimen/mainBtnTextSize"
        android:layout_margin="@dimen/btnMargin"
        android:text="Export Data"
        app:layout_constraintBottom_toTopOf="@+id/importDataBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bulkRemoveBtn" />

    <Button
        android:id="@+id/importDataBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button"
        android:textSize="@dimen/mainBtnTextSize"
        android:layout_margin="@dimen/btnMargin"
        android:text="Import Data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exportDataBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>